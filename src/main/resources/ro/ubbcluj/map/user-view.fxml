<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="365.0" prefWidth="589.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.ubbcluj.map.UserController">
   <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
      <children>
          <TableView fx:id="tableViewUsers" minHeight="-Infinity" minWidth="-Infinity" prefHeight="306.0" prefWidth="355.0" snapToPixel="false">
              <columns>
               <TableColumn prefWidth="75.0" text="Users">
                  <columns>
                     <TableColumn fx:id="tableColumnId" prefWidth="75.0" text="Id" />
                        <TableColumn fx:id="tableColumnFirstName" prefWidth="168.0" text="First Name" />
                        <TableColumn fx:id="tableColumnLastName" prefWidth="102.0" text="Last Name" />
                  </columns>
               </TableColumn>
              </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
         <TableView fx:id="tableViewFriendRequest" minHeight="-Infinity" minWidth="-Infinity" prefHeight="306.0" prefWidth="197.0">
           <columns>
               <TableColumn prefWidth="75.0" text="Friend Requests">
                  <columns>
                   <TableColumn fx:id="tableColumnFrom" prefWidth="70.0" text="From" />
                   <TableColumn fx:id="tableColumnTo" prefWidth="23.0" text="To" />
                     <TableColumn fx:id="tableColumnStatus" prefWidth="75.0" text="Status" />
                  </columns>
               </TableColumn>
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </children>
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
   </HBox>
   <HBox spacing="20.0">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin>
      <children>
         <GridPane alignment="CENTER_LEFT" prefHeight="24.0" prefWidth="317.0">
           <columnConstraints>
             <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="277.0" minWidth="10.0" prefWidth="119.0" />
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="452.0" minWidth="0.0" prefWidth="39.0" />
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="452.0" minWidth="10.0" prefWidth="144.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <Label prefHeight="16.0" prefWidth="134.0" text="Utilizator curent:" />
               <TextField fx:id="textFieldSetUser" prefHeight="24.0" prefWidth="113.0" GridPane.columnIndex="1">
                  <GridPane.margin>
                     <Insets right="10.0" />
                  </GridPane.margin>
               </TextField>
               <Button mnemonicParsing="false" onAction="#handleSetUser" prefHeight="24.0" prefWidth="133.0" text="Set Current User" GridPane.columnIndex="2" />
            </children>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </GridPane>
         <Button mnemonicParsing="false" onAction="#handleShowFriends" prefHeight="24.0" prefWidth="107.0" text="Show Friends" />
      </children>
   </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#onAddButtonClick" text="Add" />
        <Button onAction="#onUpdateButtonClick" text="Update" />
        <Button onAction="#onDeleteButtonClick" text="Delete" />
      <Button mnemonicParsing="false" onAction="#handleSendFR" text="Send Friend Request" />
      <Button mnemonicParsing="false" onAction="#handleAccept" text="Accept" />
      <Button mnemonicParsing="false" onAction="#handleReject" text="Reject" />
        <Button onAction="#handleExit" text="Exit" />
    </HBox>
   <padding>
      <Insets bottom="5.0" top="10.0" />
   </padding>
</VBox>
